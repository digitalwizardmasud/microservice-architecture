{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["ES6"],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["*"]
        },
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}